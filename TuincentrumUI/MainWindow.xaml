<Window x:Class="TuincentrumUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuincentrumUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Content="Offerte opmaken" Margin="50" Click="MaakOfferteOpButton_Click"/>
        <Button Grid.Row="1" Content="Offertes opzoeken" Margin="50" Click="ZoekOffertesOpButton_Click"/>
        <Button Grid.Row="2" Content="Klanten opzoeken" Margin="50" Click="ZoekKlantenOpButton_Click"/>
    </Grid>
</Window>
